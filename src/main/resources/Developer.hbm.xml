<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="net.lukashik.hibernate.model.Developer" table="developers">
        <id name="id" type="int">
            <column name="id" />
            <generator class="increment" />
        </id>
        <property name="firstName" type="java.lang.String"><column name="first_name" />
        </property>
        <property name="lastName" type="java.lang.String"><column name="last_name" />
        </property>
        <property name="specialty" type="java.lang.String"><column name="specialty" />
        </property>
        <property name="experience" type="int"><column name="specialty" /></property>
    </class>
</hibernate-mapping>